<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/recycler_View_item_margin"
    android:layout_marginTop="@dimen/recycler_view_item_margin_half"
    android:layout_marginEnd="@dimen/recycler_View_item_margin"
    android:layout_marginBottom="@dimen/recycler_view_item_margin_half"
    >
    
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/content_padding_small">
        
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatarImageView"
            android:layout_width="@dimen/avatar_size_small"
            android:layout_height="@dimen/avatar_size_small"
            android:src="@drawable/user_avatar_placeholder"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/arrowImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_chevron_right_24dp"/>

        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_dark"
            android:layout_marginStart="@dimen/content_padding_small"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintStart_toEndOf="@id/avatarImageView"
            app:layout_constraintEnd_toStartOf="@id/arrowImageView"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Sample Username"/>

        <TextView
            android:id="@+id/ratingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_medium"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintStart_toStartOf="@id/usernameTextView"
            app:layout_constraintTop_toBottomOf="@id/usernameTextView"
            tools:text="0.0"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>